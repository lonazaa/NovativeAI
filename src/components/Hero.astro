<section class="hero" id="hero">
	<div class="hero-container">
		<div class="hero-content fade-in">
			<h1 class="hero-title">AI Systems That Run Your Business — Even While You Sleep</h1>
			<p class="hero-subtitle">We build intelligent websites, apps, and AI agents that help you save time, cut costs, and grow — without adding headcount.</p>
			<a href="https://cal.com/rokas-quoqa0/30min" target="_blank" class="hero-cta gold-glow">
				Book Your Free AI Audit
			</a>
		</div>
		
		<div class="hero-visual fade-in stagger-2">
			<div class="tech-grid">
				<div class="tech-dot"></div>
				<div class="tech-dot"></div>
				<div class="tech-dot"></div>
				<div class="tech-dot"></div>
				<div class="tech-dot gold"></div>
				<div class="tech-dot"></div>
				<div class="tech-dot"></div>
				<div class="tech-dot"></div>
				<div class="tech-dot"></div>
			</div>
		</div>
	</div>
</section>

<style>
	.hero {
		min-height: 100vh;
		display: flex;
		align-items: center;
		padding: 6rem 2rem 0;
		position: relative;
		overflow: hidden;
	}

	.hero-container {
		max-width: 1200px;
		margin: 0 auto;
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 4rem;
		align-items: center;
		width: 100%;
	}

	.hero-content {
		z-index: 2;
	}

	.hero-title {
		font-size: clamp(2.5rem, 5vw, 4rem);
		font-weight: 800;
		line-height: 1.1;
		margin-bottom: 1.5rem;
		background: linear-gradient(135deg, #ffffff 0%, #F5D042 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.hero-subtitle {
		font-size: 1.2rem;
		color: rgba(255, 255, 255, 0.8);
		margin-bottom: 2rem;
		line-height: 1.6;
	}

	.hero-cta {
		display: inline-block;
		background: #F5D042;
		color: #000000;
		padding: 1rem 2rem;
		border-radius: 12px;
		text-decoration: none;
		font-weight: 700;
		font-size: 1.1rem;
		transition: all 0.3s ease;
		text-transform: uppercase;
		letter-spacing: 0.5px;
	}

	.hero-cta:hover {
		background: #f0c935;
		transform: translateY(-3px);
	}

	.hero-visual {
		display: flex;
		justify-content: center;
		align-items: center;
		position: relative;
	}

	.tech-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 2rem;
		padding: 2rem;
	}

	.tech-dot {
		width: 60px;
		height: 60px;
		border-radius: 50%;
		background: rgba(255, 255, 255, 0.1);
		border: 2px solid rgba(255, 255, 255, 0.2);
		animation: pulse 3s infinite;
	}

	.tech-dot.gold {
		background: rgba(245, 208, 66, 0.3);
		border-color: #F5D042;
		box-shadow: 0 0 20px rgba(245, 208, 66, 0.5);
	}

	.tech-dot:nth-child(1) { animation-delay: 0s; }
	.tech-dot:nth-child(2) { animation-delay: 0.5s; }
	.tech-dot:nth-child(3) { animation-delay: 1s; }
	.tech-dot:nth-child(4) { animation-delay: 1.5s; }
	.tech-dot:nth-child(5) { animation-delay: 2s; }
	.tech-dot:nth-child(6) { animation-delay: 2.5s; }
	.tech-dot:nth-child(7) { animation-delay: 3s; }
	.tech-dot:nth-child(8) { animation-delay: 3.5s; }
	.tech-dot:nth-child(9) { animation-delay: 4s; }

	@keyframes pulse {
		0%, 100% {
			transform: scale(1);
			opacity: 0.6;
		}
		50% {
			transform: scale(1.1);
			opacity: 1;
		}
	}

	@media (max-width: 768px) {
		.hero {
			min-height: 90vh;
			padding: 0 1rem;
		}

		.hero-container {
			grid-template-columns: 1fr;
			gap: 2rem;
			text-align: center;
		}

		.hero-visual {
			order: -1;
		}

		.tech-grid {
			gap: 1rem;
			padding: 1rem;
		}

		.tech-dot {
			width: 40px;
			height: 40px;
		}
	}
</style>