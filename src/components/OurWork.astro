<section class="how-it-works" id="how-it-works">
	<div class="container">
		<div class="section-header fade-in">
			<h2 class="section-title">How It Works</h2>
			<p class="section-subtitle">You don't need to be technical. We handle everything.</p>
		</div>
		
		<div class="steps-container">
			<div class="steps-grid">
				<div class="step-item fade-in stagger-1">
					<div class="step-visual">
						<div class="step-number">1</div>
						<div class="step-connector"></div>
					</div>
					<div class="step-content">
						<h3 class="step-title">Free AI Audit</h3>
						<p class="step-description">We assess what parts of your business can be automated effectively.</p>
					</div>
				</div>
				
				<div class="step-item fade-in stagger-2">
					<div class="step-visual">
						<div class="step-number">2</div>
						<div class="step-connector"></div>
					</div>
					<div class="step-content">
						<h3 class="step-title">Custom Build</h3>
						<p class="step-description">We build the agents, systems, or website you need — tailored to your goals.</p>
					</div>
				</div>
				
				<div class="step-item fade-in stagger-3">
					<div class="step-visual">
						<div class="step-number">3</div>
					</div>
					<div class="step-content">
						<h3 class="step-title">Launch & Scale</h3>
						<p class="step-description">Everything is deployed and running, usually within 5–10 business days.</p>
					</div>
				</div>
			</div>

			<div class="cta-container fade-in stagger-4">
				<a href="https://cal.com/rokas-quoqa0/30min" target="_blank" class="cta-button">
					<span class="cta-text">Book Your AI Audit</span>
					<div class="cta-glow"></div>
				</a>
			</div>
		</div>
	</div>
</section>

<style>
	.how-it-works {
		padding: 8rem 2rem;
		background: 
			linear-gradient(180deg, transparent 0%, rgba(245, 208, 66, 0.04) 50%, transparent 100%),
			radial-gradient(ellipse at bottom center, rgba(245, 208, 66, 0.06) 0%, transparent 70%);
		position: relative;
	}

	.how-it-works::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: 
			repeating-linear-gradient(
				90deg,
				transparent,
				transparent 100px,
				rgba(245, 208, 66, 0.02) 101px,
				rgba(245, 208, 66, 0.02) 102px
			);
		pointer-events: none;
		opacity: 0.5;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		position: relative;
		z-index: 2;
	}

	.section-header {
		text-align: center;
		margin-bottom: 5rem;
		max-width: 700px;
		margin-left: auto;
		margin-right: auto;
	}

	.section-title {
		font-size: clamp(2.5rem, 5vw, 4rem);
		font-weight: 800;
		margin-bottom: 1.5rem;
		background: linear-gradient(135deg, #ffffff 0%, #F5D042 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		line-height: 1.1;
	}

	.section-subtitle {
		font-size: clamp(1.1rem, 2.5vw, 1.4rem);
		color: rgba(255, 255, 255, 0.8);
		line-height: 1.6;
		font-weight: 400;
	}

	.steps-container {
		max-width: 900px;
		margin: 0 auto;
	}

	.steps-grid {
		display: flex;
		flex-direction: column;
		gap: 3rem;
		margin-bottom: 4rem;
	}

	.step-item {
		display: flex;
		align-items: flex-start;
		gap: 2.5rem;
		background: 
			linear-gradient(145deg, rgba(255, 255, 255, 0.06) 0%, rgba(255, 255, 255, 0.02) 100%);
		border: 1px solid rgba(255, 255, 255, 0.1);
		border-radius: 20px;
		padding: 3rem 2.5rem;
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		position: relative;
		overflow: hidden;
		backdrop-filter: blur(10px);
	}

	.step-item::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(135deg, rgba(245, 208, 66, 0.08) 0%, transparent 50%);
		opacity: 0;
		transition: opacity 0.4s ease;
		pointer-events: none;
	}

	.step-item:hover::before {
		opacity: 1;
	}

	.step-item:hover {
		background: 
			linear-gradient(145deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.03) 100%);
		border-color: rgba(245, 208, 66, 0.3);
		transform: translateX(10px);
		box-shadow: 
			0 15px 30px rgba(0, 0, 0, 0.2),
			0 0 20px rgba(245, 208, 66, 0.1),
			inset 0 1px 0 rgba(255, 255, 255, 0.1);
	}

	.step-visual {
		display: flex;
		flex-direction: column;
		align-items: center;
		flex-shrink: 0;
		position: relative;
	}

	.step-number {
		width: 80px;
		height: 80px;
		background: 
			radial-gradient(circle, #F5D042 0%, #f0c935 100%);
		color: #000000;
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		font-size: 2rem;
		font-weight: 900;
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		position: relative;
		overflow: hidden;
		box-shadow: 
			0 8px 25px rgba(245, 208, 66, 0.4),
			inset 0 1px 0 rgba(255, 255, 255, 0.3);
	}

	.step-number::before {
		content: '';
		position: absolute;
		top: -50%;
		left: -50%;
		width: 200%;
		height: 200%;
		background: conic-gradient(from 0deg, transparent, rgba(255, 255, 255, 0.3), transparent);
		animation: rotate 3s linear infinite;
		opacity: 0;
		transition: opacity 0.4s ease;
	}

	.step-item:hover .step-number::before {
		opacity: 1;
	}

	.step-item:hover .step-number {
		transform: scale(1.1);
		box-shadow: 
			0 12px 35px rgba(245, 208, 66, 0.6),
			0 0 30px rgba(245, 208, 66, 0.4),
			inset 0 1px 0 rgba(255, 255, 255, 0.4);
	}

	@keyframes rotate {
		from { transform: rotate(0deg); }
		to { transform: rotate(360deg); }
	}

	.step-connector {
		width: 2px;
		height: 60px;
		background: linear-gradient(180deg, #F5D042 0%, rgba(245, 208, 66, 0.3) 100%);
		margin-top: 1rem;
		position: relative;
		overflow: hidden;
	}

	.step-connector::before {
		content: '';
		position: absolute;
		top: -100%;
		left: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(180deg, transparent, rgba(255, 255, 255, 0.6), transparent);
		animation: flow 2s infinite;
	}

	@keyframes flow {
		0% { top: -100%; }
		100% { top: 100%; }
	}

	.step-item:last-child .step-connector {
		display: none;
	}

	.step-content {
		flex: 1;
		padding-top: 0.5rem;
	}

	.step-title {
		font-size: 1.8rem;
		font-weight: 700;
		margin-bottom: 1rem;
		color: #ffffff;
		transition: color 0.3s ease;
	}

	.step-item:hover .step-title {
		color: #F5D042;
	}

	.step-description {
		color: rgba(255, 255, 255, 0.8);
		line-height: 1.7;
		font-size: 1.1rem;
		font-weight: 400;
	}

	.cta-container {
		text-align: center;
	}

	.cta-button {
		display: inline-block;
		background: 
			linear-gradient(135deg, #F5D042 0%, #f0c935 100%);
		color: #000000;
		padding: 1.2rem 3rem;
		border-radius: 50px;
		text-decoration: none;
		font-weight: 800;
		font-size: 1.2rem;
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		text-transform: uppercase;
		letter-spacing: 1px;
		position: relative;
		overflow: hidden;
		box-shadow: 
			0 8px 25px rgba(245, 208, 66, 0.4),
			inset 0 1px 0 rgba(255, 255, 255, 0.3);
	}

	.cta-button::before {
		content: '';
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
		transition: left 0.6s ease;
	}

	.cta-button:hover::before {
		left: 100%;
	}

	.cta-button:hover {
		background: 
			linear-gradient(135deg, #f0c935 0%, #F5D042 100%);
		transform: translateY(-3px) scale(1.05);
		box-shadow: 
			0 15px 35px rgba(245, 208, 66, 0.6),
			0 0 30px rgba(245, 208, 66, 0.4),
			inset 0 1px 0 rgba(255, 255, 255, 0.4);
	}

	.cta-text {
		position: relative;
		z-index: 2;
	}

	.cta-glow {
		position: absolute;
		top: 50%;
		left: 50%;
		width: 0;
		height: 0;
		background: radial-gradient(circle, rgba(255, 255, 255, 0.3) 0%, transparent 70%);
		border-radius: 50%;
		transform: translate(-50%, -50%);
		transition: all 0.4s ease;
		pointer-events: none;
	}

	.cta-button:hover .cta-glow {
		width: 200px;
		height: 200px;
	}

	@media (max-width: 768px) {
		.how-it-works {
			padding: 5rem 1rem;
		}

		.section-header {
			margin-bottom: 3rem;
		}

		.steps-grid {
			gap: 2rem;
		}

		.step-item {
			flex-direction: column;
			text-align: center;
			gap: 1.5rem;
			padding: 2.5rem 2rem;
		}

		.step-item:hover {
			transform: translateY(-5px);
		}

		.step-connector {
			width: 60px;
			height: 2px;
			margin-top: 0;
			margin-left: 0;
		}

		.step-connector::before {
			width: 100%;
			height: 100%;
			animation: flowHorizontal 2s infinite;
		}

		@keyframes flowHorizontal {
			0% { left: -100%; }
			100% { left: 100%; }
		}

		.step-number {
			width: 60px;
			height: 60px;
			font-size: 1.5rem;
		}

		.cta-button {
			padding: 1rem 2.5rem;
			font-size: 1rem;
		}
	}
</style>