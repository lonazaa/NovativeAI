---
import astroLogo from '../assets/astro.svg';
import background from '../assets/background.svg';
---

<header class="header">
	<nav class="nav">
		<div class="nav-container">
			<div class="nav-menu" id="nav-menu">
				<div class="logo">
					<span class="logo-text">Novative<span class="logo-ai">AI</span></span>
				</div>
				<div class="nav-links">
					<a href="#hero" class="nav-link">Home</a>
					<a href="#what-we-build" class="nav-link">What We Build</a>
					<a href="#real-results" class="nav-link">Real Results</a>
					<a href="#how-it-works" class="nav-link">How It Works</a>
					<a href="#integrations" class="nav-link">Integrations</a>
					<a href="#faq" class="nav-link">FAQs</a>
				</div>
				<a href="https://cal.com/rokas-quoqa0/30min" target="_blank" class="cta-button">
					Book Audit
				</a>
			</div>
			
			<button class="mobile-menu-toggle" id="mobile-toggle">
				<span></span>
				<span></span>
				<span></span>
			</button>
		</div>
	</nav>
</header>

<style>
	.header {
		position: fixed;
		top: 2rem;
		left: 50%;
		transform: translateX(-50%);
		z-index: 1000;
		width: auto;
		max-width: 90%;
	}

	.nav-container {
		display: flex;
		align-items: center;
		justify-content: center;
		position: relative;
	}

	.nav-menu {
		background: rgba(0, 0, 0, 0.8);
		backdrop-filter: blur(20px);
		border: 1px solid rgba(255, 255, 255, 0.1);
		border-radius: 50px;
		padding: 1rem 2rem;
		display: flex;
		align-items: center;
		gap: 2rem;
		box-shadow: 
			0 8px 32px rgba(0, 0, 0, 0.3),
			inset 0 1px 0 rgba(255, 255, 255, 0.1);
		transition: all 0.3s ease;
		min-width: 700px;
		justify-content: space-between;
	}

	.nav-menu:hover {
		background: rgba(0, 0, 0, 0.9);
		border-color: rgba(245, 208, 66, 0.2);
		box-shadow: 
			0 12px 40px rgba(0, 0, 0, 0.4),
			0 0 20px rgba(245, 208, 66, 0.1),
			inset 0 1px 0 rgba(255, 255, 255, 0.15);
	}

	.logo-text {
		font-size: 1.5rem;
		font-weight: 800;
		color: #ffffff;
		white-space: nowrap;
	}

	.logo-ai {
		color: #F5D042;
	}

	.nav-links {
		display: flex;
		gap: 1.5rem;
		align-items: center;
	}

	.nav-link {
		color: rgba(255, 255, 255, 0.8);
		text-decoration: none;
		font-weight: 500;
		font-size: 0.9rem;
		transition: all 0.3s ease;
		position: relative;
		white-space: nowrap;
		padding: 0.5rem 0;
	}

	.nav-link:hover {
		color: #F5D042;
	}

	.nav-link::after {
		content: '';
		position: absolute;
		bottom: 0;
		left: 0;
		width: 0;
		height: 1px;
		background: #F5D042;
		transition: width 0.3s ease;
	}

	.nav-link:hover::after {
		width: 100%;
	}

	.cta-button {
		background: #F5D042;
		color: #000000;
		padding: 0.7rem 1.5rem;
		border-radius: 25px;
		text-decoration: none;
		font-weight: 600;
		font-size: 0.9rem;
		transition: all 0.3s ease;
		border: none;
		cursor: pointer;
		white-space: nowrap;
		box-shadow: 0 4px 15px rgba(245, 208, 66, 0.3);
	}

	.cta-button:hover {
		background: #f0c935;
		transform: translateY(-2px);
		box-shadow: 0 6px 20px rgba(245, 208, 66, 0.4);
	}

	.mobile-menu-toggle {
		display: none;
		flex-direction: column;
		background: rgba(0, 0, 0, 0.8);
		backdrop-filter: blur(20px);
		border: 1px solid rgba(255, 255, 255, 0.1);
		border-radius: 50%;
		cursor: pointer;
		padding: 1rem;
		width: 60px;
		height: 60px;
		position: relative;
		box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
		justify-content: center;
		align-items: center;
	}

	.mobile-menu-toggle span {
		width: 20px;
		height: 2px;
		background: #ffffff;
		margin: 2px 0;
		transition: 0.3s;
		border-radius: 2px;
	}

	@media (max-width: 1024px) {
		.nav-menu {
			min-width: 600px;
			gap: 1.2rem;
		}

		.nav-links {
			gap: 1rem;
		}

		.nav-link {
			font-size: 0.85rem;
		}

		.cta-button {
			padding: 0.6rem 1.2rem;
			font-size: 0.85rem;
		}
	}

	@media (max-width: 768px) {
		.header {
			top: 1rem;
			max-width: 95%;
		}

		.nav-menu {
			position: fixed;
			top: 5rem;
			left: 50%;
			transform: translateX(-50%);
			flex-direction: column;
			padding: 2rem;
			gap: 1.5rem;
			min-width: 300px;
			max-width: 90vw;
			opacity: 0;
			visibility: hidden;
			transition: all 0.3s ease;
			border-radius: 20px;
		}

		.nav-menu.active {
			opacity: 1;
			visibility: visible;
		}

		.nav-links {
			flex-direction: column;
			gap: 1rem;
			width: 100%;
			text-align: center;
		}

		.logo {
			order: -1;
		}

		.mobile-menu-toggle {
			display: flex;
		}

		.nav-container {
			justify-content: center;
		}
	}

	@media (max-width: 480px) {
		.header {
			max-width: 98%;
		}

		.nav-menu {
			min-width: 280px;
			padding: 1.5rem;
		}

		.logo-text {
			font-size: 1.3rem;
		}
	}
</style>

<script>
	document.addEventListener('DOMContentLoaded', function() {
		const mobileToggle = document.getElementById('mobile-toggle');
		const navMenu = document.getElementById('nav-menu');
		
		if (mobileToggle && navMenu) {
			mobileToggle.addEventListener('click', function() {
				navMenu.classList.toggle('active');
			});
			
			// Close menu when clicking on a link
			const navLinks = navMenu.querySelectorAll('.nav-link');
			navLinks.forEach(link => {
				link.addEventListener('click', () => {
					navMenu.classList.remove('active');
				});
			});

			// Close menu when clicking outside
			document.addEventListener('click', function(e) {
				if (!navMenu.contains(e.target) && !mobileToggle.contains(e.target)) {
					navMenu.classList.remove('active');
				}
			});
		}
	});
</script>
</header>