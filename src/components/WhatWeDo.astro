<style>
	.what-we-build {
		padding: 8rem 2rem;
		background: 
			radial-gradient(ellipse at top center, rgba(245, 208, 66, 0.08) 0%, transparent 50%),
			linear-gradient(180deg, transparent 0%, rgba(245, 208, 66, 0.02) 100%);
		position: relative;
	}

	.what-we-build::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: 
			radial-gradient(circle at 20% 30%, rgba(245, 208, 66, 0.03) 1px, transparent 1px),
			radial-gradient(circle at 80% 70%, rgba(255, 255, 255, 0.02) 1px, transparent 1px);
		background-size: 60px 60px, 80px 80px;
		pointer-events: none;
		opacity: 0.6;
	}

	.container {
		max-width: 1400px;
		margin: 0 auto;
		position: relative;
		z-index: 2;
	}

	.section-header {
		text-align: center;
		margin-bottom: 5rem;
		max-width: 800px;
		margin-left: auto;
		margin-right: auto;
	}

	.section-title {
		font-size: clamp(2.5rem, 5vw, 4rem);
		font-weight: 800;
		margin-bottom: 1.5rem;
		background: linear-gradient(135deg, #ffffff 0%, #F5D042 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		line-height: 1.1;
	}

	.section-subtitle {
		font-size: clamp(1.1rem, 2.5vw, 1.4rem);
		color: rgba(255, 255, 255, 0.8);
		line-height: 1.6;
		font-weight: 400;
	}

	.services-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 2.5rem;
		max-width: 1400px;
		margin: 0 auto;
	}

	.service-card {
		background: 
			linear-gradient(145deg, rgba(255, 255, 255, 0.08) 0%, rgba(255, 255, 255, 0.02) 100%);
		border: 1px solid rgba(255, 255, 255, 0.1);
		border-radius: 24px;
		padding: 3rem 2.5rem;
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		cursor: pointer;
		position: relative;
		overflow: hidden;
		backdrop-filter: blur(10px);
	}

	.service-card::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(135deg, rgba(245, 208, 66, 0.1) 0%, transparent 50%);
		opacity: 0;
		transition: opacity 0.4s ease;
		pointer-events: none;
	}

	.service-card:hover::before {
		opacity: 1;
	}

	.service-card:hover {
		background: 
			linear-gradient(145deg, rgba(255, 255, 255, 0.12) 0%, rgba(255, 255, 255, 0.04) 100%);
		border-color: rgba(245, 208, 66, 0.4);
		transform: translateY(-12px) scale(1.02);
		box-shadow: 
			0 25px 50px rgba(0, 0, 0, 0.4),
			0 0 30px rgba(245, 208, 66, 0.2),
			inset 0 1px 0 rgba(255, 255, 255, 0.2);
	}

	.service-icon {
		width: 90px;
		height: 90px;
		margin: 0 auto 2rem;
		background: 
			radial-gradient(circle, rgba(245, 208, 66, 0.15) 0%, rgba(245, 208, 66, 0.05) 100%);
		border: 2px solid rgba(245, 208, 66, 0.2);
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		color: #F5D042;
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		position: relative;
		overflow: hidden;
	}

	.service-icon::before {
		content: '';
		position: absolute;
		top: -50%;
		left: -50%;
		width: 200%;
		height: 200%;
		background: conic-gradient(from 0deg, transparent, rgba(245, 208, 66, 0.3), transparent);
		animation: rotate 4s linear infinite;
		opacity: 0;
		transition: opacity 0.4s ease;
	}

	.service-card:hover .service-icon::before {
		opacity: 1;
	}

	.service-card:hover .service-icon {
		background: 
			radial-gradient(circle, rgba(245, 208, 66, 0.25) 0%, rgba(245, 208, 66, 0.1) 100%);
		border-color: rgba(245, 208, 66, 0.6);
		transform: scale(1.1);
		box-shadow: 0 0 30px rgba(245, 208, 66, 0.4);
	}

	@keyframes rotate {
		from { transform: rotate(0deg); }
		to { transform: rotate(360deg); }
	}

	.service-title {
		font-size: 1.6rem;
		font-weight: 700;
		margin-bottom: 1.2rem;
		color: #ffffff;
		text-align: center;
		transition: color 0.3s ease;
	}

	.service-card:hover .service-title {
		color: #F5D042;
	}

	.service-description {
		color: rgba(255, 255, 255, 0.8);
		line-height: 1.7;
		font-size: 1.1rem;
		text-align: center;
		font-weight: 400;
	}

	@media (max-width: 768px) {
		.what-we-build {
			padding: 5rem 1rem;
		}

		.section-header {
			margin-bottom: 3rem;
		}

		.services-grid {
			grid-template-columns: 1fr;
			gap: 2rem;
		}

		.service-card {
			padding: 2.5rem 2rem;
		}

		.service-icon {
			width: 70px;
			height: 70px;
		}
	}
	}
</style>