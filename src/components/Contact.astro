<section class="contact" id="contact">
	<div class="container">
		<h2 class="section-title fade-in">Contact</h2>
		<div class="contact-info fade-in stagger-1">
			<p class="contact-text">Email us at</p>
			<a href="mailto:rp@novativeai.com" class="email-link">rp@novativeai.com</a>
		</div>
	</div>
</section>

<style>
	.contact {
		padding: 4rem 2rem;
		background: linear-gradient(180deg, transparent 0%, rgba(245, 208, 66, 0.05) 100%);
	}

	.container {
		max-width: 800px;
		margin: 0 auto;
		text-align: center;
	}

	.section-title {
		font-size: clamp(2rem, 4vw, 3rem);
		font-weight: 700;
		margin-bottom: 2rem;
		color: #ffffff;
	}

	.contact-info {
		background: rgba(255, 255, 255, 0.05);
		border: 1px solid rgba(255, 255, 255, 0.1);
		border-radius: 12px;
		padding: 2rem;
	}

	.contact-text {
		color: rgba(255, 255, 255, 0.8);
		font-size: 1.1rem;
		margin-bottom: 0.5rem;
	}

	.email-link {
		color: #F5D042;
		text-decoration: none;
		font-size: 1.3rem;
		font-weight: 600;
		transition: all 0.3s ease;
		display: block;
	}

	.email-link:hover {
		color: #f0c935;
		text-decoration: underline;
	}

	@media (max-width: 768px) {
		.contact {
			padding: 3rem 1rem;
		}

		.contact-info {
			padding: 1.5rem;
		}

		.email-link {
			font-size: 1.1rem;
		}
	}
</style>