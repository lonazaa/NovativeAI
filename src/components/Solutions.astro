<section class="real-results" id="real-results">
	<div class="container">
		<div class="section-header fade-in">
			<h2 class="section-title">What Does This Mean to Your Business?</h2>
		</div>
		
		<div class="results-grid">
			<div class="result-item fade-in stagger-1">
				<div class="result-visual">
					<div class="result-number">90%</div>
					<div class="result-indicator"></div>
				</div>
				<p class="result-description">of customer support tickets resolved without human intervention</p>
			</div>
			
			<div class="result-item fade-in stagger-2">
				<div class="result-visual">
					<div class="result-number">95%</div>
					<div class="result-indicator"></div>
				</div>
				<p class="result-description">reduction in initial response time</p>
			</div>
			
			<div class="result-item fade-in stagger-3">
				<div class="result-visual">
					<div class="result-number">50%</div>
					<div class="result-indicator"></div>
				</div>
				<p class="result-description">savings in cost</p>
			</div>
		</div>
	</div>
</section>

<style>
	.real-results {
		padding: 8rem 2rem;
		background: 
			radial-gradient(ellipse at center, rgba(245, 208, 66, 0.06) 0%, transparent 70%),
			linear-gradient(180deg, rgba(255, 255, 255, 0.02) 0%, transparent 100%);
		position: relative;
	}

	.real-results::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: 
			linear-gradient(90deg, transparent 0%, rgba(245, 208, 66, 0.02) 50%, transparent 100%),
			linear-gradient(0deg, transparent 0%, rgba(255, 255, 255, 0.01) 50%, transparent 100%);
		pointer-events: none;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		position: relative;
		z-index: 2;
	}

	.section-header {
		text-align: center;
		margin-bottom: 5rem;
	}

	.section-title {
		font-size: clamp(2.5rem, 5vw, 4rem);
		font-weight: 800;
		color: #ffffff;
		line-height: 1.1;
		max-width: 800px;
		margin: 0 auto;
	}

	.results-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 3rem;
		max-width: 1000px;
		margin: 0 auto;
	}

	.result-item {
		background: 
			linear-gradient(145deg, rgba(255, 255, 255, 0.08) 0%, rgba(255, 255, 255, 0.02) 100%);
		border: 1px solid rgba(255, 255, 255, 0.1);
		border-radius: 28px;
		padding: 4rem 3rem;
		text-align: center;
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		position: relative;
		overflow: hidden;
		backdrop-filter: blur(15px);
	}

	.result-item::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: 
			radial-gradient(circle at center, rgba(245, 208, 66, 0.1) 0%, transparent 70%);
		opacity: 0;
		transition: opacity 0.4s ease;
		pointer-events: none;
	}

	.result-item:hover::before {
		opacity: 1;
	}

	.result-item:hover {
		background: 
			linear-gradient(145deg, rgba(255, 255, 255, 0.12) 0%, rgba(255, 255, 255, 0.04) 100%);
		border-color: rgba(245, 208, 66, 0.3);
		transform: translateY(-8px) scale(1.02);
		box-shadow: 
			0 20px 40px rgba(0, 0, 0, 0.3),
			0 0 30px rgba(245, 208, 66, 0.15),
			inset 0 1px 0 rgba(255, 255, 255, 0.15);
	}

	.result-visual {
		position: relative;
		margin-bottom: 2rem;
	}

	.result-number {
a		font-size: clamp(3.5rem, 7vw, 5.5rem);
		font-weight: 900;
		background: linear-gradient(135deg, #F5D042 0%, #f0c935 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		line-height: 1;
		margin-bottom: 1rem;
		position: relative;
		z-index: 2;
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	.result-indicator {
		width: 60px;
		height: 4px;
		background: linear-gradient(90deg, #F5D042 0%, #f0c935 100%);
		border-radius: 2px;
		margin: 0 auto;
		position: relative;
		overflow: hidden;
	}

	.result-indicator::before {
		content: '';
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.6), transparent);
		animation: shimmer 2s infinite;
	}

	@keyframes shimmer {
		0% { left: -100%; }
		100% { left: 100%; }
	}

	.result-description {
		color: rgba(255, 255, 255, 0.9);
		font-size: 1.2rem;
		line-height: 1.6;
		margin: 0;
		font-weight: 500;
		position: relative;
		z-index: 2;
	}

	@media (max-width: 768px) {
		.real-results {
			padding: 5rem 1rem;
		}

		.section-header {
			margin-bottom: 3rem;
		}

		.results-grid {
			grid-template-columns: 1fr;
			gap: 2rem;
		}

		.result-item {
			padding: 3rem 2rem;
		}
	}
</style>